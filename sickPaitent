    borderRadius: 5,
  },

  surveyInput: {
    padding: 8,
    borderColor: "#d6d6d6",
    borderWidth: 1,
    justifyContent: 'flex-start',
    borderRadius: 5,
    marginBottom: Platform.OS === 'android' ? 30 : 28, //marginBottom 30 for android, 28 for iOS
    marginLeft: 20,
    marginRight: 20
  },
  questionText: {
    fontSize: 20,
    marginLeft: 20
  },
  summaryText: {
    fontSize: 20,
    marginLeft: 20,
    marginBottom: Platform.OS === 'android' ? 20 : 18 //marginBottom 20 for android, 18 for iOS
  }
});
